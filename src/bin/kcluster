#!/bin/bash
# kube-cluster cli

#
app_path=$(cat ~/kube-cluster/.env/resouces_path)

#
start() {
    "${app_path}"/up.command
}


stop() {
    "${app_path}"/halt.command
}

status() {
    echo "Cluster Status:"
    echo "$(/usr/local/sbin/corectl q -a k8smaster-01)"
    echo " "
    echo "$(/usr/local/sbin/corectl q -a k8snode-01)"
    echo " "
    echo "$(/usr/local/sbin/corectl q -a k8snode-02)"
    echo " "
}


ip() {
    echo "IPs:"
    echo "k8smaster-01 VM: $(/usr/local/sbin/corectl q -i k8smaster-01)"
    echo " "
    echo "k8snode-01 VM:   $(/usr/local/sbin/corectl q -i k8snode-01)"
    echo " "
    echo "k8snode-02 VM:   $(/usr/local/sbin/corectl q -i k8snode-02)"
    echo " "
}


usage() {
    echo "Usage: kcluster start|stop|status|ip"
}


case "$1" in
        start)
                start
                ;;
        stop)
                stop
                ;;
        status)
                status
                ;;
        ip)
                ip
                ;;
        *)
                usage
                ;;
esac
