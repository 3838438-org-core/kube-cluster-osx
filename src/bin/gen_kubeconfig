#!/bin/bash

server=$1

rm -f "$HOME/kube-cluster/kube/kubeconfig"
kubectl --kubeconfig="$HOME/kube-cluster/kube/kubeconfig" config set-cluster k8smaster-01 --server=http://$server:8080
kubectl --kubeconfig="$HOME/kube-cluster/kube/kubeconfig" config set-context default-context --cluster=k8smaster-01
kubectl --kubeconfig="$HOME/kube-cluster/kube/kubeconfig" config use-context default-context
